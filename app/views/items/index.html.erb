<% content_for :title, t(".title") %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl"><%= t(".title") %></h1>
  </div>

  <hr class="my-4 border-gray-300">

  <%= link_to new_item_path, class: "flex items-center gap-2 rounded-md w-fit px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white font-medium" do %>
    <%= heroicon "plus", options: { class: "w-5 h-5" } %>
    <%= t(".new_item") %>
  <% end %>

  <div id="items" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @items.any? %>
      <% @items.each do |item| %>
        <%= render item %>
      <% end %>
    <% else %>
      <p class="text-center my-10"><%= t(".no_items_found") %></p>
    <% end %>
  </div>
</div>
