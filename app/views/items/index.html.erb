<% content_for :title, t(".title") %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl"><%= t(".title") %></h1>
  </div>

  <hr class="my-4 border-gray-300">

  <%= link_to new_item_path, class: "flex items-center gap-2 rounded-md w-fit px-2 py-1 bg-blue-600 hover:bg-blue-500 text-white font-medium" do %>
    <%= heroicon "plus", options: { class: "w-5 h-5" } %>
    <%= t(".new_item") %>
  <% end %>

  <%= turbo_stream_from("#{Current.user.id}-items") %>

  <div class="min-w-full">
    <% if @items.values.any? %>
      <div id="items-pending">
        <% @items[Item.statuses[:pending]]&.each do |item| %>
          <%= render item %>
        <% end %>
        <p class="hidden only:block text-center">
          <%= t(".all_items_completed") %>
        </p>
      </div>

      <hr class="my-4 border-gray-300 w-3/4 mx-auto">

      <div id="items-complete">
        <% @items[Item.statuses[:complete]]&.reverse_each do |item| %>
          <%= render item %>
        <% end %>
        <p class="hidden only:block text-center">
          <%= t(".no_completed_items") %>
        </p>
      </div>
    <% else %>
      <p class="text-center my-10"><%= t(".no_items_found") %></p>
    <% end %>
  </div>
</div>
