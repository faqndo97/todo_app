<%= link_to item, class: "w-full my-5 space-y-5 border border-gray-300 rounded-md p-4 flex items-center gap-2", id: dom_id(item) do %>
  <%= item.title %>

  <% if item.description.present? %>
    <%= heroicon "document-text", variant: :outline, options: { class: "w-5 h-5" } %>
  <% end %>
<% end %>
