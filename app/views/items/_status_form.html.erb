<%# locals: (item:, checkbox_classes: '', id_suffix: :status_form) %>

<%= form_with model: item, url: list_item_path(item.list, item), method: :patch, id: dom_id(item, id_suffix), class: 'contents', data: { controller: "form-autosubmit" } do |form| %>
  <%= form.check_box :status, {checked: item.complete_status?, data: { action: "click->form-autosubmit#submit:stop" }, class: checkbox_classes}, Item.statuses[:complete], Item.statuses[:pending] %>
<% end %>
