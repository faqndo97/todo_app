
<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl"><%= t(".title") %></h1>

  <hr class="my-4 border-gray-300">

  <%= form_with(url: sign_in_path) do |form| %>
    <div class="my-5">
      <%= form.label :email, t(".email") %>
      <%= form.email_field :email, value: params[:email_hint], required: true, autofocus: true, autocomplete: "email", class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :password, t(".password") %>
      <%= form.password_field :password, required: true, autocomplete: "current-password", class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
    </div>

    <div>
      <%= form.submit t(".submit"), class: "w-full sm:w-auto rounded-md px-2.5 py-1 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>

  <br>

  <br>

  <div>
    <%= link_to t(".sign_up"), sign_up_path, class: "text-blue-600 hover:text-blue-500" %> |
    <%= link_to t(".forgot_password"), new_identity_password_reset_path, class: "text-blue-600 hover:text-blue-500" %>
  </div>
</div>
