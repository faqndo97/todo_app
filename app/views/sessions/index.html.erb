<p style="color: green"><%= notice %></p>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl"><%= t(".title") %></h1>

  <div id="sessions" class="my-5">
    <% @sessions.each do |session| %>
      <div id="<%= dom_id session %>">
        <p>
          <strong><%= t(".user_agent") %>:</strong>
          <%= session.user_agent %>
        </p>

        <p>
          <strong><%= t(".ip_address") %>:</strong>
          <%= session.ip_address %>
        </p>

        <p>
          <strong><%= t(".created_at") %>:</strong>
          <%= session.created_at %>
        </p>

      </div>
      <p class="my-5">
        <%= button_to t(".log_out"), session, method: :delete, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
      </p>
    <% end %>
  </div>
</div>
