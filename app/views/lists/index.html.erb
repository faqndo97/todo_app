<%= turbo_frame_tag "lists" do %>
  <% @lists.each do |list| %>
    <%= render "list", list: %>
  <% end %>

  <%= turbo_stream.update "new_list_container" do %>
    <%= turbo_frame_tag "new_list" do %>
      <%= link_to t(".new_list"), new_list_path, data: { turbo_frame: "new_list" }, class: "flex items-center p-2 text-gray-900 rounded-lg dark:text-white dark:hover:bg-gray-700 group bg-blue-600 text-white font-medium" %>
    <% end %>
  <% end %>
<% end %>
